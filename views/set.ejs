<link rel="stylesheet" href="/css/set.css">

<h1> USER SETTINGS </h1>

<div class="th">
  <h3>Theme</h3>
  <label class="switch">
    <input type="checkbox" id="theme">
    <span class="slider round"></span>
  </label>
  <br><br>
</div>

<h2><a class="btn rounded-lg border border-secondary" href='/cpass'> Change Password </a></h2>


<div class="not">
  <h3>Notifications</h3> <br>
  <input type="radio" id="msg" name="notif" value="mobile">
    <label for="mobile">Send Notifications through Mobile Number</label><br>
    <input type="radio" id="mail" name="notif" value="mail">
    <label for="mail">Send Notifications through Mail</label><br>

  <br> <br>
  <h3>Details</h3>
  <label for="email">Change email: &nbsp;
  </label><input type="email" id="email" value="saads@email.com" disabled>
  <br>

  <label for="phn">Change Mobile number: &nbsp;
  </label><input type="number" min="10" id="phn" value="9326757210" disabled>
  <br>

  <button type="button" class="btn border-danger" name="button">LOGOUT</button>
</div>

<script>
  $("#theme").click(function() {
    $("body").toggleClass("bg");
  });

  $("#email").click(function(){
  this.prop("disabled",false);

  });
  $("#phn").on("click",function(){
  this.attr("disabled",false);

  });
</script>

